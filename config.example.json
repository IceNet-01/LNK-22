{
  "reticulum": {
    "config_path": "~/.reticulum",
    "enable_transport": true,
    "enable_propagation": false,
    "data_dir": "./data"
  },
  "lxmf": {
    "display_name": "MeshNet Node",
    "announce_interval": 900,
    "propagation_node": false,
    "delivery_confirmations": true,
    "sync_interval": 360
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8080
  },
  "commands": {
    "prefix": "#",
    "enabled_commands": [
      "ping",
      "help",
      "status",
      "time",
      "uptime",
      "version",
      "nodes",
      "paths",
      "interfaces",
      "announces",
      "stats",
      "identity",
      "destinations",
      "ai",
      "ask",
      "email",
      "discord",
      "notify"
    ],
    "rate_limit": {
      "enabled": true,
      "commands_per_minute": 10,
      "ai_queries_per_minute": 3,
      "window_seconds": 60
    }
  },
  "ai": {
    "enabled": true,
    "ollama_host": "http://localhost:11434",
    "model": "llama3.2:1b",
    "max_response_length": 500,
    "timeout": 30,
    "system_prompt": "You are a helpful assistant responding to queries over a mesh network. Keep responses concise and informative."
  },
  "notifications": {
    "email": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "smtp_port": 587,
      "use_tls": true,
      "username": "",
      "password": "",
      "from_address": "",
      "to_address": ""
    },
    "discord": {
      "enabled": false,
      "webhook_url": "",
      "username": "MeshNet Bot",
      "avatar_url": ""
    }
  },
  "storage": {
    "max_messages": 1000,
    "message_retention_days": 30,
    "database_path": "./data/meshnet.db"
  },
  "logging": {
    "level": "INFO",
    "file": "./logs/meshnet.log",
    "max_size_mb": 10,
    "backup_count": 5
  }
}
